<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://java.sun.com/xml/ns/javaee"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         version="2.5">


    <!--登录认证的过滤器-->
    <filter>
        <filter-name>CASAuthenticationFilter</filter-name>
        <filter-class>org.jasig.cas.client.authentication.AuthenticationFilter</filter-class>
        <!--设置登录页面-->
        <init-param>
            <param-name>casServerLoginUrl</param-name>
            <param-value>http://192.168.18.130:8080/cas/login</param-value>
        </init-param>
        <!--设置服务器名字  就是域名 不能使用localhost，localhost无法使用cookie-->
        <init-param>
            <param-name>serverName</param-name>
            <param-value>http://127.0.0.1:10001</param-value>
        </init-param>
    </filter>
    <!--配置登录认证的过滤器的映射-->
    <filter-mapping>
        <filter-name>CASAuthenticationFilter</filter-name>
        <!-- /*拦截所有路径 -->
        <url-pattern>/*</url-pattern>
    </filter-mapping>


    <!--凭据，票据的认证过滤器-->
    <filter>
        <filter-name>casTicketFilter</filter-name>
        <filter-class>org.jasig.cas.client.validation.Cas20ProxyReceivingTicketValidationFilter</filter-class>
        <!--CAS访问的路径的前缀-->
        <init-param>
            <param-name>casServerUrlPrefix</param-name>
            <param-value>http://192.168.18.130:8080/cas</param-value>
        </init-param>
        <!--设置服务器名字  就是域名   不能使用localhost，localhost无法使用cookie-->
        <init-param>
            <param-name>serverName</param-name>
            <param-value>http://127.0.0.1:10001</param-value>
        </init-param>
    </filter>
    <!--配置登录认证的过滤器的映射-->
    <filter-mapping>
        <filter-name>casTicketFilter</filter-name>
        <!-- /*拦截所有路径 -->
        <url-pattern>/*</url-pattern>
    </filter-mapping>


    <!--HttpServletRequest的过滤器-->
    <filter>
        <filter-name>httpRequestFilter</filter-name>
        <filter-class>org.jasig.cas.client.util.HttpServletRequestWrapperFilter</filter-class>
    </filter>
    <!--配置HttpServletRequest过滤器的映射-->
    <filter-mapping>
        <filter-name>httpRequestFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>


    <!--获取用户名的过滤器-->
    <filter>
        <filter-name>casLocalFilter</filter-name>
        <filter-class>org.jasig.cas.client.util.AssertionThreadLocalFilter</filter-class>
    </filter>
    <!--配置获取用户名过滤器的映射-->
    <filter-mapping>
        <filter-name>casLocalFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>



    <!--退出过滤器-->
    <filter>
        <filter-name>signOutFilter</filter-name>
        <filter-class>org.jasig.cas.client.session.SingleSignOutFilter</filter-class>
    </filter>
    <!--配置退出过滤器的映射-->
    <filter-mapping>
        <filter-name>signOutFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>




</web-app>